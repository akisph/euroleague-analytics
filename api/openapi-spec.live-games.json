          "pointsB": { "type": "integer", "format": "int32" },
          "utc": { "type": "string", "nullable": true }
        },
        "additionalProperties": false
      },
      "LivePointsDto": {
        "type": "object",
        "properties": {
          "rows": { "type": "array", "items": { "$ref": "#/components/schemas/LivePointRowDto" }, "nullable": true }
        },
        "additionalProperties": false
      }
    }
  }
}
