          "player": { "type": "string", "nullable": true },
          "actionId": { "type": "string", "nullable": true },
          "action": { "type": "string", "nullable": true },
          "points": { "type": "integer", "format": "int32" },
          "coordX": { "type": "integer", "format": "int32" },
          "coordY": { "type": "integer", "format": "int32" },
