      "get": { "tags": ["TeamsStats"], "summary": "Get opponents traditional stats" }
    },
    "/v3/competitions/{competitionCode}/statistics/teams/opponentsAdvanced": {
      "get": { "tags": ["TeamsStats"], "summary": "Get opponents advanced stats" }
    }
  }
}
