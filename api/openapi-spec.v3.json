    "/v3/competitions/{competitionCode}/stats/players/leaders": {
      "get": { "tags": ["Stats"], "summary": "Get player leaders stats" }
    },
    "/v3/competitions/{competitionCode}/seasons/{seasonCode}/clubs/{clubCode}/stats": {
      "get": { "tags": ["Stats"], "summary": "Get club stats" }
    },
    "/v3/competitions/{competitionCode}/seasons/{seasonCode}/games/{gameCode}/stats": {
      "get": { "tags": ["Stats"], "summary": "Get game stats" }
    },
    "/v3/competitions/{competitionCode}/seasons/{seasonCode}/games/{gameCode}/teamsComparison": {
      "get": { "tags": ["Stats"], "summary": "Get teams comparison" }
